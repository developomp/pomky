{
    "cSpell.words": [
        "Audiowide",
        "chrono",
        "cpus",
        "developomp",
        "dtolnay",
        "kibibytes",
        "Noto",
        "paintable",
        "pids",
        "pomky",
        "rustup",
        "sysinfo",
